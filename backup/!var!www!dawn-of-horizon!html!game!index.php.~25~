$character = array(
    'name' => 'Fred The Zombie',
    'health' => '36',
    'gore' => '1',
    'clutch' => '5',
    'brawn' => '6',
    'sense' => '4',
    'flail' => '2',
    'chuck' => '3',
    'lurch' => '4',
);

$filename = substr(preg_replace("/[^a-z0-9]/", "", strtolower($character['name'])), 0, 20);
file_put_contents($filename, serialize($character));