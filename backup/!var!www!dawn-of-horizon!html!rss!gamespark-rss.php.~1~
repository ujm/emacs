    </div>
    <div id="nav">
      <ul>
        <li><a href="index.html">トップ</a></li>
        <li><a href="rss/4gamer-rss.php?page=1">4gamer</a></li>
      </ul>
    </div>
    <div id="content">
<?php
$RSSpath = "http://www.gamespark.jp/rss/index.rdf";
$XML = simplexml_load_file ( $RSSpath );

// ページ総数
$max_pages = count($XML);
$limit = 10;
$page_num = floor($max_pages / $limit);
$current_pages = $_GET["page"];
$start = ($current_pages-1) * $limit;
$end = $start + $limit;

$count = 1;
foreach ($XML->item as $item) {
    if ($count > $start && $count <= $end) {
        $title = $item->title;
        $link = $item->link;
        echo $title . "<br />";
        echo "<a href = $link target='_blank'>" . $link . "</a><br />";
    }
    $count++;
}

echo '<br />';

// ページ番号を表示
echo "<div style='text-align:center;'>";
for ($i = 1; $i <= $page_num; $i++) {
    if ($i == $current_pages) {
        echo "<span style='font-weight:bold;'>" . $i . "</span>" . " | ";
    } else {
        echo "<a href=?page=$i>" . $i . "</a>" . " | ";
    }
}
echo "</div>";
?>
</div>
</body>
